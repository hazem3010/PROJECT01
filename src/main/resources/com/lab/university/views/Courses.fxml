<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="400" prefWidth="300" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab.university.controllers.CoursesController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="300" spacing="10" style="-fx-padding: 20;">
        <VBox alignment="CENTER" spacing="10">
            <Label text="Student Courses" />
            <ListView fx:id="coursesListView" prefHeight="200" prefWidth="200" />
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="courseField" prefHeight="26.0" prefWidth="127.0" promptText="Enter course subject" />
                <Button onAction="#addCourse" prefHeight="26.0" prefWidth="47.0" text="Add" />
                <Button onAction="#removeCourse" prefHeight="26.0" prefWidth="64.0" text="Remove" />
            </HBox>
        </VBox>
        <Button onAction="#goBack" prefWidth="60" text="Back" />
    </VBox>
</AnchorPane>
