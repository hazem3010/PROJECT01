<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab.university.controllers.AddLectureController"
      spacing="10" style="-fx-padding: 10px;">
    <Label text="Lecture Name:" />
    <TextField fx:id="nameTextField" />

    <Label text="Location:" />
    <TextField fx:id="locationTextField" />

    <HBox spacing="10">
        <Button text="Add Lecture" onAction="#addLecture" />
        <Button text="Back" onAction="#goBack" />
    </HBox>
</VBox>
