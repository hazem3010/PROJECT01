<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox
        xmlns="http://javafx.com/javafx/16"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.lab.university.controllers.RemoveLectureController"
        spacing="10" style="-fx-padding: 20px;">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Search Lecture:" />
        <TextField fx:id="searchTextField" onAction="#searchLecture" />
    </HBox>

    <Label fx:id="searchResultLabel" />


    <HBox spacing="10">
        <Button text="Back" onAction="#goBack" />
        <Button text="Remove Lecture" onAction="#removeLecture" />
    </HBox>
</VBox>
