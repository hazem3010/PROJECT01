<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="400" prefWidth="300" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab.university.controllers.PhoneNumbersController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="300" spacing="10" style="-fx-padding: 20;">
        <VBox alignment="CENTER" spacing="10">
            <Label text="Teacher Assistant Phone Numbers" />
            <ListView fx:id="phoneNumberListView" prefHeight="200" prefWidth="200" />
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="phoneNumberField" prefHeight="26.0" prefWidth="127.0" promptText="Enter Phone Number" />
                <Button onAction="#addPhoneNumber" prefHeight="26.0" prefWidth="47.0" text="Add" />
                <Button onAction="#removePhoneNumber" prefHeight="26.0" prefWidth="64.0" text="Remove" />
            </HBox>
        </VBox>
        <Button onAction="#goBack" prefWidth="60" text="Back" />
    </VBox>
</AnchorPane>
